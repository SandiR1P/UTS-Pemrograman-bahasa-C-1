#include <stdio.h>

// Deklarasi konstanta untuk level kekeruhan air
#define NUM_LEVELS 9
int kekeruhanLevels[NUM_LEVELS] = {6, 8, 12, 18, 24, 30, 36, 42, 49};

// Fungsi untuk mendapatkan kecepatan motor berdasarkan level kekeruhan
int getKecepatanMotor(int level) {
    if (level >= 6 && level <= 49) {
        // Fuzzy logic atau aturan kecepatan motor dapat ditambahkan di sini
        return 1000; // Kecepatan motor default
    } else {
        // Level kekeruhan tidak valid
        printf("Level kekeruhan tidak valid\n");
        return -1;
    }
}

// Fungsi untuk mendapatkan waktu mencuci berdasarkan level kekeruhan
int getWaktuMencuci(int level) {
    if (level >= 6 && level <= 49) {
        // Fuzzy logic atau aturan waktu mencuci dapat ditambahkan di sini
        return 60; // Waktu mencuci default
    } else {
        // Level kekeruhan tidak valid
        printf("Level kekeruhan tidak valid\n");
        return -1;
    }
}

// Fungsi untuk menggerakkan motor pembuka klep pengisian air
void motorPembukaKlepPengisianAir() {
    // Implementasi untuk menggerakkan motor pembuka klep pengisian air
    printf("Motor pembuka klep pengisian air bergerak\n");
}

// Fungsi untuk menggerakkan motor utama
void motorUtamaBerputar() {
    // Implementasi untuk menggerakkan motor utama
    printf("Motor utama berputar\n");
}

// Fungsi untuk menggerakkan motor pembuka klep pembuangan air kotor
void motorPembukaKlepPembuanganAirKotor() {
    // Implementasi untuk menggerakkan motor pembuka klep pembuangan air kotor
    printf("Motor pembuka klep pembuangan air kotor bergerak\n");
}

// Fungsi untuk mengeringkan cucian
void mengeringkanCucian() {
    // Implementasi untuk mengeringkan cucian
    printf("Mengeringkan cucian\n");
}

int main() {
    // Tombol start ditekan
    printf("Tombol start ditekan\n");

    // Motor pembuka klep pengisian air bergerak selama 2 menit
    motorPembukaKlepPengisianAir();
    printf("Air penuh\n");

    // Mendeteksi level kekeruhan air
    int levelKekruhan = 24; // Anda bisa mengganti nilai level kekeruhan sesuai kebutuhan

    // Menggerakkan motor utama
    int kecepatanMotor = getKecepatanMotor(levelKekruhan);
    int waktuMencuci = getWaktuMencuci(levelKekruhan);

    if (kecepatanMotor != -1 && waktuMencuci != -1) {
        motorUtamaBerputar();

        // Motor pembuka klep pembuangan air kotor bergerak selama 2 menit
        motorPembukaKlepPembuanganAirKotor();
        printf("Air kotor habis\n");

        // Mengeringkan cucian selama 3 menit dengan kecepatan 2000 rpm
        mengeringkanCucian();
        printf("Cucian selesai\n");

        // Motor pembuka klep pengisian air bergerak selama 2 menit
        motorPembukaKlepPengisianAir();
        printf("Air penuh\n");

        // Motor utama berputar selama sisa waktu mencuci
        printf("Motor utama berputar selama %d menit\n", waktuMencuci);

        // Motor pembuka klep pembuangan air kotor bergerak selama 2 menit
        motorPembukaKlepPembuanganAirKotor();
        printf("Air kotor habis\n");

        // Mengeringkan cucian selama 3 menit dengan kecepatan 2000 rpm
        mengeringkanCucian();
        printf("Cucian selesai\n");
    }

    return 0;
}
