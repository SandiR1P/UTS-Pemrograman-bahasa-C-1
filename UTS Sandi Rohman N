#include <stdio.h>

// Fungsi untuk menghitung kecepatan motor berdasarkan level kekeruhan air
int hitungKecepatan(int level) {
    int kecepatan;
    
    switch (level) {
        case 6:
            kecepatan = 1200;
            break;
        case 8:
            kecepatan = 1400;
            break;
        case 12:
            kecepatan = 1600;
            break;
        case 18:
            kecepatan = 1800;
            break;
        case 24:
            kecepatan = 2000;
            break;
        case 30:
            kecepatan = 2200;
            break;
        case 36:
            kecepatan = 2400;
            break;
        case 42:
            kecepatan = 2600;
            break;
        case 49:
            kecepatan = 2800;
            break;
        default:
            kecepatan = 1000;  // Default jika level tidak valid
            break;
    }

    return kecepatan;
}

int main() {
    int level_kekeruhan;
    
    // Input level kekeruhan air
    printf("Masukkan level kekeruhan air: ");
    scanf("%d", &level_kekeruhan);

    // Hitung kecepatan motor berdasarkan level kekeruhan
    int kecepatan_motor = hitungKecepatan(level_kekeruhan);

    // Menampilkan informasi
    printf("Motor listrik pembuka klep pengisian air aktif selama 2 menit sampai air penuh\n");
    printf("Sensor turbidimeter aktif hanya satu kali untuk mendeteksi level kekeruhan air.\n");
    printf("Motor listrik utama berputar dengan kecepatan %d rpm selama 60 menit.\n", kecepatan_motor);
    printf("Motor listrik pembuka klep pembuangan air kotor aktif selama 2 menit sampai air kotor habis.\n");
    printf("Motor listrik utama berputar dengan kecepatan 2000 rpm untuk mengeringkan cucian selama 3 menit.\n");
    printf("Motor listrik pembuka klep pengisian air aktif selama 2 menit sampai air penuh.\n");
    printf("Motor listrik utama berputar selama 60 menit.\n");
    printf("Motor listrik pembuka klep pembuangan air kotor aktif selama 2 menit sampai air habis.\n");
    printf("Motor listrik utama berputar dengan kecepatan 2000 rpm untuk mengeringkan cucian selama 3 menit.\n");

    return 0;
}
